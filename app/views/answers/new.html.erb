<div>
  <h2> Respondendo pergunta sobre - <%= @product.name %> </h2>
</div>
<div>
<h4> Pergunta: <%= @question.content %> </h4>
</div>

<div>
  <%= form_with model: [@product, @question, @answer], local: true do |form| %>
    <div>
      <%= form.label :content, 'Resposta:' %>
    </div>
    <%= form.text_area :content, placeholder: 'Digite sua resposta', size: '80x5' %>
    <div>
      <%= form.submit 'Enviar' %>
    </div>
  <% end %>
</div>
