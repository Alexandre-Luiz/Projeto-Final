<div class="row">
  <div class="w-0 mx-auto">
    <div>
      <h1> <%= @user.name %> </h1>
    </div>

    <div>
      <h3> Detalhes: </h3>
      <ul>
        <li> <%= "#{User.human_attribute_name(:role)}: #{@user.role}" %> </li>
        <li> <%= "#{User.human_attribute_name(:department)}: #{@user.department}" %> </li>
        <li> <%= "#{User.human_attribute_name(:email)}: #{@user.email}" %> </li>
      </ul>
    </div>

    <div>
      <%= link_to 'Editar Perfil', edit_user_registration_path %> |
      <%= link_to 'Meus produtos', my_products_products_path %> |
      <%= link_to 'Histórico de transações', my_transactions_products_path %>  
    </div>

    <div>
      <%= link_to 'Voltar', root_path %>
    </div>
  </div>
</div>
